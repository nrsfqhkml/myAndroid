<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.memegenerator.MainActivity">

    <fragment
        android:id="@+id/fragment"
        android:name="com.example.memegenerator.TopSectionFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout="@layout/top_section_fragments"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/fragment3"
        android:layout_alignEnd="@+id/fragment3"
        android:layout_marginTop="11dp" />

    <fragment
        android:id="@+id/fragment3"
        android:name="com.example.memegenerator.BottomPictureFragment"
        android:layout_width="300dp"
        android:layout_height="300dp"
        tools:layout="@layout/bottom_picture_fragment"
        android:layout_below="@+id/fragment"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="11dp" />

</RelativeLayout>
